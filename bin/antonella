<?php

require_once dirname(__DIR__) . '/../../autoload.php';

if (!class_exists(\Symfony\Component\Console\Application::class)) {
    fwrite(STDERR, "❌ Symfony Console no está disponible. Ejecuta 'composer install'.\n");
    exit(1);
}

use Symfony\Component\Console\Application;
use Antonella\Commands\NewProjectCommand;

$app = new Application('Antonella CLI', '1.0.0');
$app->add(new NewProjectCommand());
$app->run();